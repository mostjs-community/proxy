{
  "compilerOptions": {
    "declaration": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es2015"
    ],
    "noImplicitAny": true,
    "sourceMap": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "types": [
      "mocha",
      "node"
    ],
    "outDir": "lib"
  },
  "include": [
    "./**/*.ts"
  ]
}
