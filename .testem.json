{
  "framework": "mocha",
  "src_files": [
    "test/index.js"
  ],
  "before_tests": "browserify test/browser/index.js -t babelify -o test/browser/bundle.js",
  "serve_files": [
    "test/browser/bundle.js"
  ],
  "after_tests": "rm test/browser/bundle.js",
  "script": "npm run test-ci",
  "launch_in_ci": [
    "firefox"
  ],
  "launch_in_dev": [
    "chrome"
  ],
  "ignore_missing_launchers": true
}
